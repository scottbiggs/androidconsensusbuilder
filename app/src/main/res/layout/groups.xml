<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for working with groups of contacts.
-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bone"
    >

    <TextView
        android:id="@+id/not_done_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="Groups of recipients are managed here"
        />

    <ImageButton
        android:id="@+id/groups_delete_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/not_done_tv"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_delete"
        />

    <ImageButton
        android:id="@+id/groups_edit_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/not_done_tv"
        android:layout_toLeftOf="@id/groups_delete_butt"
        android:src="@android:drawable/ic_menu_edit"
        />

    <ImageButton
        android:id="@+id/groups_add_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/not_done_tv"
        android:layout_toLeftOf="@id/groups_edit_butt"
        android:src="@android:drawable/ic_input_add"
        />

    <ListView
        android:id="@+id/groups_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/groups_add_butt"
        android:background="@color/light_gray"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />


    <!-- the FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/groups_respond_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_send" />

</RelativeLayout>